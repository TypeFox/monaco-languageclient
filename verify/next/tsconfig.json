{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": ".",
    "outDir": "lib",
    "declarationDir": "lib",
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/.next/types/**/*.ts",
    "dist/types/**/*.ts",
    "dist/dev/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "editor/src/**/*",
    "bundle/**/*"
  ],
  "exclude": ["editor/**/*", "dist/**/*", "lib/**/*", "node_modules/**/*"]
}
