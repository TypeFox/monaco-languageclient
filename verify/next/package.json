{
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.3"
  },
  "scripts": {
    "clean": "shx rm -fr .next dist lib bundle *.tsbuildinfo",
    "verify": "npm install && npm run dev",
    "verify:ci": "npm install && npm run build -d",
    "dev": "npm run bundle && npm run build:tsc && npm run dev:next",
    "dev:next": "next dev -p 8083",
    "dev:vite": "npm run bundle:config && vite --config vite.config.ts",
    "build": "npm run bundle && npm run build:tsc && next build",
    "bundle": "npm run bundle:config && npm run bundle:editorWorker && npm run bundle:extHostWorker && npm run bundle:extensionService && npm run bundle:textmateWorker",
    "bundle:config": "vite --config vite.config.bundle.ts build",
    "bundle:editorWorker": "vite --config vite.config.editorWorker.ts build",
    "bundle:extHostWorker": "vite --config vite.config.extHostWorker.ts build",
    "bundle:extensionService": "vite --config vite.config.extensionService.ts build",
    "bundle:textmateWorker": "vite --config vite.config.textmateWorker.ts build",
    "build:tsc": "tsgo --build ",
    "watch:tsc": "tsgo --build --watch",
    "start": "next start"
  },
  "dependencies": {
    "@codingame/monaco-vscode-api": "^25.1.2",
    "@codingame/monaco-vscode-editor-api": "^25.1.2",
    "@codingame/monaco-vscode-extensions-service-override": "^25.1.2",
    "@codingame/monaco-vscode-keybindings-service-override": "^25.1.2",
    "@codingame/monaco-vscode-textmate-service-override": "^25.1.2",
    "@codingame/monaco-vscode-typescript-basics-default-extension": "^25.1.2",
    "@codingame/monaco-vscode-typescript-language-features-default-extension": "^25.1.2",
    "@codingame/monaco-vscode-views-service-override": "^25.1.2",
    "@typefox/monaco-editor-react": "~7.7.0",
    "langium": "~4.2.0",
    "monaco-languageclient": "~10.7.0",
    "next": "~16.1.6",
    "react": "~19.2.4",
    "react-dom": "~19.2.4",
    "vscode": "npm:@codingame/monaco-vscode-extension-api@^25.1.2",
    "vscode-languageclient": "~9.0.1",
    "vscode-languageserver": "~9.0.1"
  },
  "devDependencies": {
    "@codingame/esbuild-import-meta-url-plugin": "~1.0.3",
    "@typescript/native-preview": "~7.0.0-dev.20260205.1",
    "@types/react-dom": "~19.2.3",
    "shx": "~0.4.0",
    "vite": "~8.0.0-beta.13"
  },
  "volta": {
    "node": "24.13.0",
    "npm": "11.6.2"
  }
}
