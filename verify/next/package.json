{
  "private": true,
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.3"
  },
  "scripts": {
    "verify": "npm install && npm run dev",
    "verify:ci": "npm install && npm run build -d",
    "dev": "npm run build:worker && next dev -p 8083",
    "dev:turbo": "npm run build:worker &&next dev --turbopack -p 8083",
    "build": "npm run build:worker && next build",
    "build:worker": "npx esbuild --format=esm --bundle ./app/langium-dsl/worker/langium-server.ts --outdir=public/workers",
    "build:tsc": "tsc --build tsconfig.json",
    "watch:tsc": "tsc --build tsconfig.json --watch",
    "start": "next start",
    "clean": "shx rm -fr dist .next *.tsbuildinfo"
  },
  "type": "module",
  "dependencies": {
    "@codingame/monaco-vscode-api": "^23.0.4",
    "@codingame/monaco-vscode-keybindings-service-override": "^23.0.4",
    "@typefox/monaco-editor-react": "~7.2.0",
    "langium": "~4.1.0",
    "monaco-languageclient": "~10.2.0",
    "monaco-languageclient-examples": "~2025.11.2-next.1",
    "next": "~15.5.4",
    "react": "~19.1.1",
    "react-dom": "~19.1.1",
    "vscode": "npm:@codingame/monaco-vscode-extension-api@^23.0.4",
    "vscode-languageclient": "~9.0.1",
    "vscode-languageserver": "~9.0.1"
  },
  "devDependencies": {
    "@types/node": "~22.15.35",
    "@types/react": "~19.1.16",
    "@types/react-dom": "~19.1.9",
    "shx": "~0.4.0",
    "typescript": "~5.9.2"
  },
  "volta": {
    "node": "22.20.0",
    "npm": "10.9.3"
  }
}
