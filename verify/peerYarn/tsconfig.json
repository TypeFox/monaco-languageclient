{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "rootDir": ".",
    "noEmit": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": [
    "**/src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**/*"
  ]
}
